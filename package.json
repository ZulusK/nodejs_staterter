{
  "name": "comix-space",
  "version": "0.0.1",
  "description": "Backend for comix-space app",
  "main": "index.js",
  "author": "ZulusK",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:ZulusK/comics-space"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./index.js",
    "dev": "NODE_ENV=development nodemon ./index.js",
    "lint": "esw *.js server config --color",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors server --recursive --exit --require mocha-clean --timeout 3000",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors server --recursive --exit --require mocha-clean --timeout 3000",
    "precomit": "yarn lint && yarn test"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-validation": "^1.0.2",
    "express-winston": "^2.6.0",
    "helmet": "^3.12.1",
    "http-status": "^1.2.0",
    "husky": "^0.14.3",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "method-override": "^3.0.0",
    "module-alias": "^2.1.0",
    "morgan": "^1.9.0",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^3.0.10",
    "validator": "^10.4.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-watch": "^4.0.1",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-clean": "^1.0.0",
    "supertest": "^3.1.0",
    "supertest-as-promised": "^4.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      ".gitignore",
      "README.md"
    ]
  },
  "_moduleAliases": {
    "@config": "./config",
    "@": "./server",
    "@root": ".",
    "@helpers": "./server/helpers",
    "@app": "./index.js"
  }
}
